<Window x:Class="Test20311M.PortListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список портов" Height="250" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <RichTextBox x:Name="rtPortList" Margin="10,10,10,37" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Block.LineHeight="1">
            <FlowDocument>
                <Paragraph/>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="bnClose" Content="OK" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" HorizontalAlignment="Center"/>

    </Grid>
</Window>
